<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ToDo Listesi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <h1 class="text-center my-4">ToDo Listesi</h1>
        <form action="/add" method="POST" class="input-group mb-3">
            <input type="text" name="title" class="form-control" placeholder="Yeni g√∂rev ekle..." required>
            <button class="btn btn-primary" type="submit">Ekle</button>
        </form>
        <ul class="list-group">
            <% todos.forEach(todo => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center <%= todo.completed ? 'completed' : '' %>">
                    <span><%= todo.title %></span>
                    <div class="btn-group">
                        <form class="update-form" data-id="<%= todo.id %>">
                            <button type="button" class="btn btn-warning btn-sm update-btn">üìù</button>
                        </form>                        
                        <form action="/delete/<%= todo.id %>" method="POST">
                            <button class="btn btn-danger btn-sm">üóë</button>
                        </form>
                    </div>
                </li>
            <% }); %>
        </ul>           
    </div>

    <!-- jQuery ve app.js dosyasƒ± -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/app.js"></script>

</body>
</html>
